<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.yiya.collector.dao.ImageDao">
    <resultMap id="resultImageBean" type="com.yiya.collector.bean.ImageBean">
        <id column="img_id" property="img_id"/>
        <result column="cata_id" property="cata_id"/>
        <result column="thumbNail" property="thumbNail"/>
        <result column="title" property="title"/>
        <result column="width" property="width"/>
        <result column="height" property="height"/>
    </resultMap>
     <select id="queryAllImageBean" resultType="resultImageBean">
         select * from ImageBean
     </select>
     <insert id="insertImageBean" parameterType="com.yiya.collector.bean.ImageBean" flushCache="true">
          INSERT INTO ImageBean (cata_id,thumbNail,imgPaths,contextPath,contextHtml,currentPageUrl,baseUrl) VALUES 
            (#{cata_id},#{thumbNail},#{imgPaths},#{contextPath},#{contextHtml},#{currentPageUrl},#{baseUrl})
     </insert>
     <delete id="deleteImageBean" parameterType="int">
         DELETE FROM ImageBean WHERE id=#{id} 
     </delete>
     <update id="updateImageBeanById" parameterType="com.yiya.collector.bean.ImageBean" flushCache="true">
         update ImageBean set width=#{width},height=#{height} where img_id=#{img_id}
     </update>
</mapper>